<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sadovod.DiseaseInfoPage"
             BackgroundColor="#FFFFFF">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="DiseaseNameTxt" Text="Disease"
                VerticalOptions="StartAndExpand" TextColor="#555555" FontSize="22"
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="DiseaseInfoTxt" Text="Information"
                VerticalOptions="StartAndExpand" TextColor="#555555" FontSize="16"
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="DiseaseSolutionTxt" Text="Solution"
                VerticalOptions="StartAndExpand" TextColor="#555555" FontSize="16"
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="BackButton" Clicked="BackButtonClicked" Text="Назад" BackgroundColor="LightGreen"
                    TextColor="#555555" HorizontalOptions="CenterAndExpand"
                    VerticalOptions="StartAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>